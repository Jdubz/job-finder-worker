{
  "name": "job-applicator",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "electronmon": {
    "patterns": [
      "!dist/main.js",
      "!dist/preload.js",
      "!dist/preload.cjs",
      "!dist/utils.js",
      "!dist/types.js",
      "!logs/**",
      "!mcp-config.json"
    ]
  },
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc && npm run postbuild && npm run build:mcp",
    "build:mcp": "cd mcp-server && npm ci && npm run build",
    "postbuild": "node scripts/postbuild.mjs",
    "watch:build": "nodemon --watch src --watch mcp-server/src --ext ts,html,css --exec 'npm run build'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "type-check": "npm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0",
    "@shared/types": "*",
    "electron-store": "^11.0.2",
    "playwright-core": "^1.47.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.17.50",
    "@vitest/coverage-v8": "^4.0.15",
    "electron": "^33.2.1",
    "electronmon": "^2.0.4",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^4.0.15"
  }
}
