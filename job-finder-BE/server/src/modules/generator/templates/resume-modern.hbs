<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <style>
      body {
        font-family: 'Inter', Arial, sans-serif;
        margin: 0;
        padding: 32px;
        color: #111827;
      }
      h1 {
        margin: 0;
        font-size: 28px;
        color: {{accentColor}};
      }
      .section {
        margin-top: 24px;
      }
      .section-title {
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: #6b7280;
        margin-bottom: 8px;
      }
      .experience-item {
        margin-bottom: 16px;
      }
      .experience-header {
        display: flex;
        justify-content: space-between;
        font-weight: 600;
      }
      ul {
        padding-left: 20px;
        margin: 8px 0 0 0;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{{personalInfo.name}}</h1>
      <p>{{personalInfo.title}}</p>
      <p>{{personalInfo.contact.email}} • {{personalInfo.contact.location}}</p>
    </header>

    <section class="section">
      <div class="section-title">Professional Summary</div>
      <p>{{professionalSummary}}</p>
    </section>

    <section class="section">
      <div class="section-title">Experience</div>
      {{#each experience}}
        <div class="experience-item">
          <div class="experience-header">
            <span>{{role}} • {{company}}</span>
            <span>{{startDate}} – {{#if endDate}}{{endDate}}{{else}}Present{{/if}}</span>
          </div>
          <ul>
            {{#each highlights}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </section>

    {{#if skills}}
      <section class="section">
        <div class="section-title">Skills</div>
        {{#each skills}}
          <p><strong>{{category}}:</strong> {{#each items}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p>
        {{/each}}
      </section>
    {{/if}}

    {{#if education}}
      <section class="section">
        <div class="section-title">Education</div>
        {{#each education}}
          <p><strong>{{institution}}</strong> – {{degree}}</p>
        {{/each}}
      </section>
    {{/if}}
  </body>
</html>
